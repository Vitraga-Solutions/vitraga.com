---
// Modal component for job applications
---

<!-- Modal Overlay -->
<div id="job-application-modal" class="hidden fixed inset-0 z-50 overflow-y-auto">
  <div id="modal-overlay" class="flex items-center justify-center min-h-screen p-4 bg-black bg-opacity-50">
    <div class="relative w-full max-w-2xl bg-white rounded-[24px] shadow-xl">
      <!-- Modal Header -->
      <div class="flex items-center justify-between p-6 border-b border-gray-200">
        <div>
          <h2 id="modal-job-title" class="text-2xl font-medium text-black">Apply for Position</h2>
          <p class="text-gray-600 mt-1">Fill out the form below to submit your application</p>
        </div>
        <button id="close-modal" class="text-gray-400 hover:text-gray-600 transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      
      <!-- Modal Body -->
      <div class="p-6 max-h-[70vh] overflow-y-auto">
        <form id="application-form" class="space-y-6">
          <input type="hidden" id="modal-job-id" name="job_id" />
          
          <!-- Dynamic fields will be inserted here -->
          <div id="dynamic-fields"></div>
          
          <!-- Submit Button -->
          <div class="flex justify-end gap-4 pt-6 border-t border-gray-200">
            <button 
              type="button" 
              id="cancel-application" 
              class="px-6 py-3 border border-gray-300 text-gray-700 rounded-[14px] hover:bg-gray-50 transition-colors duration-200 font-medium"
            >
              Cancel
            </button>
            <button 
              type="submit" 
              class="px-6 py-3 bg-black text-white rounded-[14px] hover:bg-gray-800 transition-colors duration-200 font-medium"
            >
              Submit Application
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const modal = document.getElementById('job-application-modal');
    const cancelButton = document.getElementById('cancel-application');
    
    // Cancel button functionality
    if (cancelButton) {
      cancelButton.addEventListener('click', () => {
        if (modal) {
          modal.classList.add('hidden');
          document.body.style.overflow = 'auto';
        }
      });
    }
  });
</script>
