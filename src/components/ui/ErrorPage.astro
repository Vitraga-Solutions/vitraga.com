---
const { title = "Something went wrong", message = "An unexpected error occurred. Please try again later." } = Astro.props;
---

<div class="min-h-screen flex items-center justify-center px-4">
  <div class="max-w-md w-full text-center">
    <div class="mb-8">
      <svg class="mx-auto h-24 w-24 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
      </svg>
    </div>
    
    <h1 class="text-2xl font-bold text-gray-900 mb-4">{title}</h1>
    <p class="text-gray-600 mb-8">{message}</p>
    
    <div class="space-y-4">
      <a 
        href="/careers"
        class="inline-block w-full px-6 py-3 bg-black text-white rounded-[14px] hover:bg-gray-800 transition-colors duration-200 font-medium"
      >
        Back to Careers
      </a>
      
      <a 
        href="/"
        class="inline-block w-full px-6 py-3 border border-black text-black rounded-[14px] hover:bg-gray-50 transition-colors duration-200 font-medium"
      >
        Go Home
      </a>
    </div>
  </div>
</div>
