---
import SectionTitle from "../ui/SectionTitle.astro";
import ServiceCard from "../ui/ServiceCard.astro";
import Section from "./Section.astro";

import c1 from "../../assets/pics/card-pic1.png";
import c2 from "../../assets/pics/card-pic2.png";
import c3 from "../../assets/pics/card-pic3.png";
import c4 from "../../assets/pics/card-pic4.png";
import c5 from "../../assets/pics/card-pic5.png";
import c6 from "../../assets/pics/card-pic6.png";

const cards = [
  {
    index: 1,
    titleTop: "Machine Learning",
    titleBottom: "Optimization",
    img: c1,
    alt: "machine learning",
    link: "https://google.com",
  },
  {
    index: 2,
    titleTop: "Web App",
    titleBottom: "Development",
    img: c2,
    alt: "SEO",
    link: "https://google.com",
  },
  {
    index: 3,
    titleTop: "Mobile App",
    titleBottom: "Development",
    img: c3,
    alt: "SEO",
    link: "https://google.com",
  },
  {
    index: 1,
    titleTop: "Data Scraping",
    img: c4,
    alt: "SEO",
    link: "https://google.com",
  },
  {
    index: 2,
    titleTop: "Automation",
    img: c5,
    alt: "automation",
    link: "https://google.com",
  },

  {
    index: 3,
    titleTop: "Custom WordPress",
    titleBottom: "Development",
    img: c6,
    alt: "SEO",
    link: "https://google.com",
  },
];

const description =
  "Discover our services, from machine learning to web and mobile development, designed to bring your ideas to life.";
---

<Section id="services">
  <div class="mt-[80px] mb-5">
    <SectionTitle sectionTitle="Services" description={description} />
    <div class="grid lg:grid-cols-2 lg:grid-rows-3 gap-10">
      {
        cards.map((card) => (
          <ServiceCard
            index={card.index}
            titleTop={card.titleTop}
            titleBottom={card.titleBottom}
            img={card.img}
            alt={card.alt}
            link={card.link}
          />
        ))
      }
    </div>
  </div>
</Section>
